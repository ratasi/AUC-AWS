{% extends '::base.html.twig' %}
{% block body %}

<div id="fh5co-contact" class="fh5co-section-gray">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2 text-center heading-section animate-box">
        <h3>Información de contacto</h3>
      </div>
    </div>
    <div class="map animate-box">
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12330.967419977496!2d-0.41300471864630006!3d39.40734592192138!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xfc355cedae3fbb4f!2sCampo+de+F%C3%BAtbol+FBCD+Catarroja!5e0!3m2!1ses!2ses!4v1486462331634" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>
    <form name="contactform" action="{{ path('auc_contacto') }}" method="POST">
      <div class="row animate-box">
        <div class="col-md-6">
          <h3 class="section-title">Nuestra dirección</h3>
          <p>
            <ul class="contact-info">
              <li><i class="icon-location-pin"></i>Avenida Rei Jaume I, 2, 46470 Catarroja, Valencia</li>
              <li><i class="icon-phone2"></i>+34 634 75 09 19 - Jose Hernández </li>
              <li><i class="icon-mail"></i>unioncatarroja@gmail.com</li>
            </ul>
          </p>
          <img id="direccion" src="{{asset('images/contacto.png')}}" alt="">
        </div>
        {{ form_start(form) }}
        <div class="col-md-6">
          <p><h3 class="section-title" style="margin-left: 12px">Formulario de contacto</h3></p>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                {{ form_errors(form.nombre) }}
                {{ form_widget(form.nombre, {'attr': {'class': 'form-control','placeholder': 'Nombre'}}) }}
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                {{ form_errors(form.apellidos) }}
                {{ form_widget(form.apellidos, {'attr': {'class': 'form-control','placeholder': 'Apellidos'}}) }}
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                {{ form_errors(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control','placeholder': 'Email'}}) }}
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                {{ form_errors(form.asunto) }}
                {{ form_widget(form.asunto, {'attr': {'class': 'form-control','placeholder': 'Asunto'}}) }}
              </div>
            </div>
            <div class="col-md-12">
              <div class="form-group">
                {{ form_errors(form.mensaje) }}
                {{ form_widget(form.mensaje, {'attr': {'class': 'form-control', 'rows': '6', 'placeholder': 'Mensaje'}}) }}
              </div>
            </div>
          </div>
          <div class="col-md-10 col-md-offset-8">
            <div class="form-group">
              <input type="submit" name="Enviar mensaje" class="btn btn-primary" alt="enviar">
            </div>
          </div>
        </div>
        {{ form_end(form) }}
      </div>
    </form>
    {% for label, flashes in app.session.flashbag.all %}
    {% for flash in flashes %}
    <div class="alert alert-{{ label }}">
      {{ flash }}
    </div>
    {% endfor %}
    {% endfor %}
  </div>
</div>

{% endblock %}
