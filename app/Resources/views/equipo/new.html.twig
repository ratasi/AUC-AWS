{% extends '::base.html.twig' %}

{% block body %}


{{ form_start(form) }}

<div class="container">

  <div class="col-md-4 col-md-offset-4">
    <div class="text-center">
      <p>
        <h1>Crear Equipo</h1>
      </p>
    </div>
    <div>
      <P>
        {{ form_errors(form.nombre) }}
        {{ form_widget(form.nombre, {'attr': {'class': 'form-control','placeholder': 'Nombre'}}) }}
      </p>
    </div>
    <div>
      <p>Elige entrenadores:</p>
      <p>
        {{ form_errors(form.entrenador) }}
        {{ form_widget(form.entrenador, {'attr': {'class': 'form-control'}}) }}
      </p>
    </div>
    <div>
      <P>
        {{ form_errors(form.imagen) }}
        {{ form_widget(form.imagen, {'attr': {'class': 'form-control','placeholder': 'URL de imagen'}}) }}
      </p>
    </div>

    <div class="container">
      <div class="row">
        <div id="margenbot">
      <div class="editarboton">
        <input class="btn btn-success" type="submit" value="Crear" />
      </div>

        <div class="volverboton">
        <a href="{{ url('equipo_index') }}"><input class="btn btn-default" type="button" value="Volver" /></a>
      </div>
    </div>
  </div>
</div>
      </div>

      {{ form_end(form) }}


      {% endblock %}
