{% extends 'base.html.twig' %}

{% block body %}

    {{ form_start(edit_form) }}

    <div class="container">

      <div class="col-md-4 col-md-offset-4">
        <div class="text-center">
          <p>
            <h1>Editar Noticia</h1>
          </p>
        </div>
        <div>
          <p>
            {{ form_errors(edit_form.fecha) }}
            {{ form_widget(edit_form.fecha, {'attr': {'class': 'form-control'}}) }}
          </p>
        </div>
        <div>
          <P>
            {{ form_errors(edit_form.titulo) }}
            {{ form_widget(edit_form.titulo, {'attr': {'class': 'form-control','placeholder': 'Titulo'}}) }}
          </p>
        </div>
        <div>
          <P>
            {{ form_errors(edit_form.subtitulo) }}
            {{ form_widget(edit_form.subtitulo, {'attr': {'class': 'form-control','placeholder': 'Subtitulo'}}) }}
          </p>
        </div>

        <div>
          <P>
            {{ form_errors(edit_form.descripcion) }}
            {{ form_widget(edit_form.descripcion, {'attr': {'class': 'form-control','rows': '10','placeholder': 'Descripcion'}}) }}
          </p>
        </div>

        <div>
          <p>
            {{ form_errors(edit_form.imagen) }}
            {{ form_widget(edit_form.imagen, {'attr': {'class': 'form-control','rows': '2','placeholder': 'URL de la imagen'}}) }}
          </p>
        </div>
        <div class="container">
          <div class="row">
            <div id="margenbot">
            <div class="editarboton">
            <input class="btn btn-success" type="submit" value="Editar" />
            {{ form_end(edit_form) }}
            </div>

            <div class="eliminarboton">
            {{ form_start(delete_form) }}
                <input class="btn btn-danger"type="submit" value="Eliminar">
            </div>

            {{ form_end(delete_form) }}
            <div class="volverboton">
            <a href="{{ url('noticia_index') }}"><input class="btn btn-default" type="button" value="Volver" /></a>
          </div>
            </div>

          </div>
        </div>
      </div>
    </div>


{% endblock %}
